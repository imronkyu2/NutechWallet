<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="customEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/et_custom</item>
        <item name="android:textColor">@color/black_242424</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:maxLength">25</item>
    </style>

    <style name="errorTV">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/red_C2161E</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawableStart">@drawable/ic_warning</item>
        <item name="android:drawablePadding">5dp</item>
    </style>
</resources>